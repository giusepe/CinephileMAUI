<?xml version="1.0" encoding="UTF-8" ?>
<ui:ContentPageBase
    x:Class="Cinephile.Views.MovieDetailView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="clr-namespace:Cinephile.Views"
    xmlns:vms="clr-namespace:Cinephile.ViewModels.ViewModels;assembly=Cinephile.ViewModels"
    x:TypeArguments="vms:MovieDetailViewModel">
    <ScrollView>
        <StackLayout>
            <Image x:Name="Poster" Aspect="AspectFill" />
            <StackLayout Margin="10">
                <Label
                    x:Name="Genres"
                    FontSize="12"
                    HorizontalTextAlignment="End" />
                <Label x:Name="ReleaseDate" FontSize="14" />
                <Label x:Name="Overview" FontSize="10" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ui:ContentPageBase>