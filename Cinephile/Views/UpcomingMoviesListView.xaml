<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="Cinephile.Views.UpcomingMoviesListView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.Maui;assembly=ReactiveUI.Maui"
    xmlns:views="clr-namespace:Cinephile.Views"
    xmlns:vms="clr-namespace:Cinephile.ViewModels;assembly=Cinephile.ViewModels"
    x:TypeArguments="vms:UpcomingMoviesListViewModel">

    <ListView
        x:Name="UpcomingMoviesList"
        RowHeight="100"
        SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <views:UpcomingMovieCellView />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</views:ContentPageBase>